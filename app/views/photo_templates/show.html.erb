<h1>
  Photo #<%= the_photo.id %> details
</h1>

<a href="/photos/<%= the_photo.id %>/edit">
  Edit photo
</a>

<hr>

<dl>
  <dt>
    Source
  </dt>
  <dd>
    <%= the_photo.source %>
  </dd>

  <dt>
    Caption
  </dt>
  <dd>
    <%= the_photo.caption %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(the_photo.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(the_photo.updated_at) %> ago
  </dd>
</dl>

<a href="/delete_photo/<%= the_photo.id %>" class="btn btn-default">
  Delete photo
</a>

<hr>

<a href="/photos">
  Go back
</a>
